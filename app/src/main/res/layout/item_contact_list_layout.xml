<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_conatact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_bold"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@id/imageview_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Abraham jabbie" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_conatact_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_conatact_name"
            app:srcCompat="@drawable/close" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_conatact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_conatact_name"
            tools:text="abc@gmail.com" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_conatact_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toStartOf="@+id/textview_conatact_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_conatact_email"
            tools:text="9989745123" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_conatact_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/textview_conatact_number"
            app:layout_constraintTop_toBottomOf="@id/textview_conatact_number"
            tools:text="Brother" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_conatact_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="Pending"
            android:textAllCaps="true"
            android:textColor="@color/colorRed"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>